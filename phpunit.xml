<?xml version="1.0"?>
<phpunit verbose="true">
	<logging>
		<log type="coverage-html" target="build/coverage" title="Services_Hatena" charset="UTF-8" yui="true" highlight="true" lowUpperBound="35" highLowerBound="70"/>
		<log type="coverage-clover" target="build/logs/clover.xml"/>
		<log type="junit" target="build/logs/junit.xml" logIncompleteSkipped="false" title="Services_Hatena"/>
	</logging>
	<filter>
		<blacklist>
			<directory suffix=".php">/usr/share/php</directory>
			<directory suffix=".php">tests/unit/</directory>
		</blacklist>
	</filter>
	<testsuites>
		<testsuite>
			<directory>tests</directory>
			<file>*Test.php</file>
		</testsuite>
	</testsuites>
	<php>
		<includePath>lib/XML_RPC</includePath>
                <includePath>lib/Services_OpenSearch</includePath>
		<includePath>lib/XML_RSS</includePath>
		<!-- E_ALL -->
		<ini name="error_reporting" value="30719" />
	</php>
</phpunit>
